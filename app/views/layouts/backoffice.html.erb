<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>ECommerce - BackOffice </title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'backoffice', media: 'all' %>

</head>

<body>
  <!-- Page Wrapper -->
  <div id="wrapper">
    <%= render partial: "layouts/backoffice_shared/navigation" %>

    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                  <%= yield %>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
  </div>

    <% if notice %>
      <%= javascript_tag "$.notify('#{notice}', 'success');"  %>
    <% end -%>
    <% if alert %>
      <script>
        $.notify("<%= alert %>", "error");
      </script>
    <% end -%>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'backoffice' %>

</body>

</html>
